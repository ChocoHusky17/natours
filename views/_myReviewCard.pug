
mixin myReviewCard(review)

    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/tours/${review.tour.imageCover}`, alt=`${review.tour.name}`)
            h6.reviews__user= review.tour.name
        p.reviews__text= `"${review.review}"`
        div(style='padding-left:150px; padding-bottom:10px;')= review.createdAt.toLocaleString('en-us', {day:'numeric',month:'long',year:'numeric'})
        .reviews__rating
            each star in [1,2,3,4,5]
                svg.reviews__star(class=`reviews__star--${review.rating >= star? 'active':'inactive'}`)
                    use(xlink:href='/img/icons.svg#icon-star')
